<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UnusedAttribute">

    <is.xyz.mpv.MPVView
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:foreground="?android:windowBackground" />

    <View
        android:id="@+id/osd_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/player_osd_background"
        android:clickable="false"
        android:focusable="false" />


    <RelativeLayout
        android:id="@+id/osd_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:padding="8dp">


        <Button
            android:id="@+id/backBtn"
            style="?attr/materialIconButtonFilledTonalStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/dialog_exit"
            android:tooltipText="@string/dialog_exit"
            app:icon="?homeAsUpIndicator" />


        <Button
            android:id="@+id/unlockBtn"
            style="?attr/materialIconButtonFilledStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/action_unlock_player"
            android:tag="LOCKED_ONLY_VISIBLE_UI_TAG"
            android:tooltipText="@string/action_unlock_player"
            android:visibility="gone"
            app:icon="@drawable/round_lock_open_24"
            tools:layout_marginTop="48dp"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/topControlsGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/backBtn"
            android:gravity="end">


            <Button
                android:id="@+id/cycleDecoderBtn"
                style="?attr/materialIconButtonFilledTonalStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/action_video_decoder"
                android:tooltipText="@string/action_video_decoder"
                tools:text="HW+" />

            <Button
                android:id="@+id/topPiPBtn"
                style="?attr/materialIconButtonFilledTonalStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/action_open_pip"
                android:tooltipText="@string/action_open_pip"
                app:icon="@drawable/round_picture_in_picture_alt_24" />

            <Button
                android:id="@+id/playlistBtn"
                style="?attr/materialIconButtonFilledTonalStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/action_playlist"
                android:tooltipText="@string/action_playlist"
                app:icon="@drawable/round_playlist_play_24" />

            <Button
                android:id="@+id/settingsBtn"
                style="?attr/materialIconButtonFilledTonalStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/action_settings"
                android:tooltipText="@string/action_settings"
                app:icon="@drawable/round_video_settings_24" />

        </LinearLayout>

        <Button
            android:id="@+id/prevBtn"
            style="?attr/materialIconButtonFilledStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:layout_toStartOf="@id/playBtn"
            android:contentDescription="@string/dialog_prev"
            android:tooltipText="@string/dialog_prev"
            app:icon="@drawable/round_skip_previous_24" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/playBtn"
            style="?attr/materialIconButtonFilledTonalStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="18dp"
            android:contentDescription="@string/btn_play"
            android:scaleX="1.75"
            android:scaleY="1.75"
            android:tooltipText="@string/btn_play"
            app:icon="@drawable/round_play_arrow_24"
            tools:foreground="@drawable/player_icon_focus_indicator" />


        <Button
            android:id="@+id/nextBtn"
            style="?attr/materialIconButtonFilledStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:layout_toEndOf="@id/playBtn"
            android:contentDescription="@string/dialog_next"
            android:tooltipText="@string/dialog_next"
            app:icon="@drawable/round_skip_next_24" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/currentChapterBtn"
            style="?attr/materialIconButtonFilledTonalStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/titleTextView"
            android:layout_marginBottom="4dp"
            android:ellipsize="middle"
            android:maxEms="10"
            android:singleLine="true"
            android:visibility="gone"
            app:icon="@drawable/round_bookmarks_24"
            app:iconPadding="4dp"
            tools:text="Chapter 0"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/bottomControlsGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/titleTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="4dp">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/cycleSpeedBtn"
                style="?attr/materialIconButtonFilledStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/title_speed_dialog"
                android:tooltipText="@string/title_speed_dialog"
                app:icon="@drawable/round_speed_24"
                tools:foreground="@drawable/player_icon_focus_indicator"
                tools:text=" 0.69x" />


            <Button
                android:id="@+id/topLockBtn"
                style="?attr/materialIconButtonFilledStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/action_lock_player"
                android:tooltipText="@string/action_lock_player"
                app:icon="@drawable/round_lock_24" />

            <Button
                android:id="@+id/aspectBtn"
                style="?attr/materialIconButtonFilledStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/aspect_ratio"
                android:tooltipText="@string/aspect_ratio"
                app:icon="@drawable/round_aspect_ratio_24" />


        </LinearLayout>

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/minorTitleTextView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_toStartOf="@id/playbackDurationToggle"
            android:ellipsize="middle"
            android:fadingEdge="horizontal"
            android:singleLine="true"
            android:tag="ALWAYS_VISIBLE_UI_TAG"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            tools:text="Title" />

        <TextView
            android:id="@+id/minorTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/playbackSeekbar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_toStartOf="@id/playbackDurationToggle"
            android:ellipsize="start"
            android:fadingEdge="horizontal"
            android:singleLine="true"
            android:tag="ALWAYS_VISIBLE_UI_TAG"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="Artist / Album / Folder" />

        <LinearLayout
            android:id="@+id/playbackDurationToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/playbackSeekbar"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="-2dp"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:tag="ALWAYS_VISIBLE_UI_TAG">

            <TextView
                android:id="@+id/playbackPositionTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00:00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:text="/"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/playbackDurationTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                tools:text="13:37" />
        </LinearLayout>

        <com.google.android.material.slider.Slider
            android:id="@+id/playbackSeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/pref_seek_gesture_smooth_title"
            android:tag="ALWAYS_VISIBLE_UI_TAG"
            app:thumbHeight="32dp"
            tools:value="69"
            tools:valueTo="100" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:clickable="false"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:focusable="false"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/volume_bar_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:alpha="0"
            android:gravity="center"
            android:orientation="vertical"
            tools:alpha="1">

            <TextView
                android:id="@+id/volume_bar_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:ellipsize="none"
                android:gravity="center"
                android:singleLine="true"
                android:textAlignment="gravity"
                android:textSize="11sp"
                tools:text="69" />

            <ProgressBar
                android:id="@+id/volume_bar"
                style="?android:progressBarStyleHorizontal"
                android:layout_width="18dp"
                android:layout_height="160dp"
                android:max="100"
                android:progressDrawable="@drawable/vertical_progress_bar"
                tools:progress="69" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:src="@drawable/round_volume_up_24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/brightness_bar_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:alpha="0"
            android:gravity="center"
            android:orientation="vertical"
            tools:alpha="1">

            <TextView
                android:id="@+id/brightness_bar_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:ellipsize="none"
                android:gravity="center"
                android:singleLine="true"
                android:textAlignment="gravity"
                android:textSize="11sp"
                tools:text="100" />

            <ProgressBar
                android:id="@+id/brightness_bar"
                style="?android:progressBarStyleHorizontal"
                android:layout_width="18dp"
                android:layout_height="160dp"
                android:max="100"
                android:progressDrawable="@drawable/vertical_progress_bar"
                tools:progress="100" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:src="@drawable/round_brightness_medium_24" />
        </LinearLayout>


        <TextView
            android:id="@+id/gestureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:alpha="0"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="4"
            android:textAlignment="gravity"
            android:textColor="#ffffff"
            android:textSize="36sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:alpha="1"
            tools:layout_alignTop="@id/volume_bar_container"
            tools:text="[gesture]" />
    </RelativeLayout>


</FrameLayout>
