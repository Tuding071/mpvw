<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UnusedAttribute">

    <is.xyz.mpv.MPVView
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:foreground="?android:windowBackground" />

    <View
        android:id="@+id/osd_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/player_osd_background"
        android:clickable="false"
        android:focusable="false" />


    <RelativeLayout
        android:id="@+id/osd_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">


        <Button
            android:id="@+id/backBtn"
            style="?attr/materialIconButtonFilledTonalStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/dialog_exit"
            android:tooltipText="@string/dialog_exit"
            app:icon="?homeAsUpIndicator" />

        <LinearLayout
            android:id="@+id/topControlsGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/backBtn"
            android:gravity="end">


            <Button
                android:id="@+id/playlistBtn"
                style="?attr/materialIconButtonFilledTonalStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/action_playlist"
                android:tooltipText="@string/action_playlist"
                app:icon="@drawable/round_playlist_play_24" />

            <Button
                android:id="@+id/settingsBtn"
                style="?attr/materialIconButtonFilledTonalStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/action_settings"
                android:tooltipText="@string/action_settings"
                app:icon="@drawable/round_video_settings_24" />

        </LinearLayout>

        <Button
            android:id="@+id/prevBtn"
            style="?attr/materialIconButtonFilledStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:layout_toStartOf="@id/playBtn"
            android:contentDescription="@string/dialog_prev"
            android:tooltipText="@string/dialog_prev"
            app:icon="@drawable/round_skip_previous_24" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/playBtn"
            style="?attr/materialIconButtonFilledTonalStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="18dp"
            android:contentDescription="@string/btn_play"
            android:scaleX="1.75"
            android:scaleY="1.75"
            android:tooltipText="@string/btn_play"
            app:icon="@drawable/round_play_arrow_24" />


        <Button
            android:id="@+id/nextBtn"
            style="?attr/materialIconButtonFilledStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:layout_toEndOf="@id/playBtn"
            android:contentDescription="@string/dialog_next"
            android:tooltipText="@string/dialog_next"
            app:icon="@drawable/round_skip_next_24" />

        <LinearLayout
            android:id="@+id/bottomControlsGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/titleTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="4dp">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/cycleSpeedBtn"
                style="?attr/materialIconButtonFilledStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/title_speed_dialog"
                android:tooltipText="@string/title_speed_dialog"
                app:icon="@drawable/round_speed_24"
                tools:text=" 0.69x" />


            <Button
                android:id="@+id/topLockBtn"
                style="?attr/materialIconButtonFilledStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/action_lock_player"
                android:tooltipText="@string/action_lock_player"
                app:icon="@drawable/round_lock_24" />

            <Button
                android:id="@+id/topPiPBtn"
                style="?attr/materialIconButtonFilledStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/action_open_pip"
                android:tooltipText="@string/action_open_pip"
                app:icon="@drawable/round_picture_in_picture_alt_24" />


        </LinearLayout>

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/minorTitleTextView"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            tools:text="Title" />

        <TextView
            android:id="@+id/minorTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/playbackSeekbar"
            android:ellipsize="start"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="Artist / Album / Folder" />

        <LinearLayout
            android:id="@+id/playbackDurationToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/playbackSeekbar"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/playbackPositionTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?colorPrimary"
                tools:text="00:00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:text="/"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/playbackDurationTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                tools:text="13:37" />
        </LinearLayout>

        <com.google.android.material.slider.Slider
            android:id="@+id/playbackSeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/pref_seek_gesture_smooth_title"
            app:thumbHeight="32dp"
            android:focusable="false" />


    </RelativeLayout>

    <Button
        android:id="@+id/unlockBtn"
        style="?attr/materialIconButtonFilledStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:contentDescription="@string/action_unlock_player"
        android:tooltipText="@string/action_unlock_player"
        android:visibility="gone"
        app:icon="@drawable/round_lock_open_24"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/gestureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="4"
        android:textAlignment="gravity"
        android:textColor="#ffffff"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:layout_marginBottom="80dp"
        tools:text="[gesture]"
        tools:visibility="visible" />


</FrameLayout>
