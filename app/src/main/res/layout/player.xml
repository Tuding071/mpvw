<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--    Player   -->
    <is.xyz.mpv.MPVView
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:foreground="#000000" />

    <!--    OSD   -->
    <RelativeLayout
        android:id="@+id/controls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/player_osd_background"
        android:orientation="vertical">


        <!--    Title Bar   -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:touchscreenBlocksFocus="false"
            app:menu="@menu/menu_player"
            app:titleTextAppearance="@style/TextAppearance.Material3.TitleMedium"
            tools:navigationIcon="@drawable/round_arrow_back_24"
            tools:title="Video Title.mp4" />


        <!--    Play/Pause/Forward/Backwards   -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/prevBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="?actionBarItemBackground"
                android:contentDescription="@string/previous_item"
                android:padding="0dp"
                android:src="@drawable/round_skip_previous_24" />

            <ImageView
                android:id="@+id/playBtn"
                style="@style/Player.IconButton"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_margin="8dp"
                android:contentDescription="@string/btn_play"
                android:padding="0dp"
                android:src="@drawable/round_play_arrow_24" />

            <ImageView
                android:id="@+id/nextBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="?actionBarItemBackground"
                android:contentDescription="@string/next_item"
                android:padding="0dp"
                android:src="@drawable/round_skip_next_24" />

        </LinearLayout>

        <!--        Timestamp/Chapters/Orientation   -->
        <LinearLayout
            android:id="@+id/seekBarButtonsGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/playbackSeekbar"
            android:layout_marginHorizontal="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/playbackPositionTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:minEms="4"
                android:paddingVertical="8dp"
                android:singleLine="true"
                tools:text="00:00:00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:text="/"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/playbackDurationTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?actionBarItemBackground"
                android:paddingVertical="8dp"
                android:singleLine="true"
                tools:text="00:13:37" />

            <Button
                android:id="@+id/currentChapterButton"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/round_keyboard_arrow_right_24"
                android:drawablePadding="0dp"
                android:ellipsize="middle"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:singleLine="true"
                app:drawableTint="?colorPrimaryContainer"
                tools:ignore="RtlHardcoded,RtlSymmetry"
                tools:text="\u2022  Oi Mama na pls" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/topPiPBtn"
                style="@style/Player.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?actionBarItemBackground"
                android:contentDescription="@string/picture_in_picture"
                android:src="@drawable/round_picture_in_picture_alt_24" />

            <ImageView
                android:id="@+id/cycleOrientation"
                style="@style/Player.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?actionBarItemBackground"
                android:contentDescription="@string/pref_auto_rotation_title"
                android:src="@drawable/round_screen_rotation_24" />


        </LinearLayout>


        <SeekBar
            android:id="@+id/playbackSeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottomControlsGroup"
            android:layout_marginHorizontal="8dp"
            android:progressTint="?colorPrimary"
            android:thumbTint="?colorPrimary" />


        <!--        Bottom controls   -->
        <LinearLayout
            android:id="@+id/bottomControlsGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:gravity="center">


            <ImageView
                android:id="@+id/cycleAudioBtn"
                style="@style/Player.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/round_audiotrack_24" />

            <ImageView
                android:id="@+id/cycleSubsBtn"
                style="@style/Player.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/round_subtitles_24" />


            <TextView
                android:id="@+id/cycleSpeedBtn"
                style="@style/Player.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:gravity="center"
                app:drawableStartCompat="@drawable/round_speed_24"
                app:drawableTint="@android:color/white"
                tools:text="0.69x" />

            <ImageView
                android:id="@+id/cycleAspectRatio"
                style="@style/Player.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/aspect_ratio"
                android:src="@drawable/round_aspect_ratio_24" />


            <ImageView
                android:id="@+id/topLockBtn"
                style="@style/Player.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/lock_player"
                android:src="@drawable/round_lock_24" />

        </LinearLayout>


    </RelativeLayout>


    <!--    Stats for nerds   -->
    <TextView
        android:id="@+id/statsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:background="#70000000"
        android:padding="8dp"
        android:textColor="#00FF00"
        android:visibility="gone"
        tools:text="60 FPS"
        tools:visibility="visible" />

    <!--    Swipe gesture hints-->
    <TextView
        android:id="@+id/gestureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="4"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="[gesture]"
        tools:visibility="visible" />


    <!-- Unlock Button. Rounded for life -->
    <Button
        android:id="@+id/unlockBtn"
        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="@string/unlock"
        android:visibility="gone"
        app:icon="@drawable/round_lock_open_24"
        tools:visibility="visible" />

</RelativeLayout>

