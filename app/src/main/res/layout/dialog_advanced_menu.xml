<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fadeScrollbars="false"
    android:scrollbarFadeDuration="0"
    android:scrollbarSize="8dp"
    android:scrollbarStyle="outsideOverlay"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            style="?attr/materialCardViewFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/audioBtn"
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:contentDescription="@string/open_external_audio"
                    android:foreground="@drawable/button_focus_ring_selector"
                    app:icon="@drawable/round_audiotrack_24"
                    app:iconSize="32dp"
                    app:tooltipText="@string/open_external_audio" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/subBtn"
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:contentDescription="@string/open_external_sub"
                    android:foreground="@drawable/button_focus_ring_selector"
                    app:icon="@drawable/round_subtitles_24"
                    app:iconSize="32dp"
                    app:tooltipText="@string/open_external_sub" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/orientationBtn"
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:contentDescription="@string/switch_orientation"
                    android:foreground="@drawable/button_focus_ring_selector"
                    app:icon="@drawable/round_screen_rotation_24"
                    app:iconSize="32dp"
                    app:tooltipText="@string/switch_orientation" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/backgroundBtn"
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:contentDescription="@string/resume_bg_playback"
                    android:foreground="@drawable/button_focus_ring_selector"
                    app:icon="@drawable/round_headset_24"
                    app:iconSize="32dp"
                    app:tooltipText="@string/resume_bg_playback" />


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Video Adjustments Section -->
        <com.google.android.material.card.MaterialCardView
            style="?attr/materialCardViewFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">


                <GridLayout
                    android:id="@+id/rowVideoControls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:rowCount="1">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/brightnessBtn"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:contentDescription="@string/video_brightness"
                        android:ellipsize="end"
                        android:foreground="@drawable/button_focus_ring_selector"
                        android:lines="1"
                        android:text="@string/video_brightness"
                        app:icon="@drawable/round_brightness_medium_24"
                        app:iconGravity="textTop"
                        app:iconPadding="8dp"
                        app:iconSize="28dp"
                        app:tooltipText="@string/video_brightness" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/contrastBtn"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:contentDescription="@string/contrast"
                        android:ellipsize="end"
                        android:foreground="@drawable/button_focus_ring_selector"
                        android:lines="1"
                        android:text="@string/contrast"
                        app:icon="@drawable/round_contrast_24"
                        app:iconGravity="textTop"
                        app:iconPadding="8dp"
                        app:iconSize="28dp"
                        app:tooltipText="@string/contrast" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/gammaBtn"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:contentDescription="@string/gamma"
                        android:ellipsize="end"
                        android:foreground="@drawable/button_focus_ring_selector"
                        android:lines="1"
                        android:text="@string/gamma"
                        app:icon="@drawable/round_escalator_24"
                        app:iconGravity="textTop"
                        app:iconPadding="8dp"
                        app:iconSize="28dp"
                        app:tooltipText="@string/gamma" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/saturationBtn"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:contentDescription="@string/saturation"
                        android:ellipsize="end"
                        android:foreground="@drawable/button_focus_ring_selector"
                        android:lines="1"
                        android:text="@string/saturation"
                        app:icon="@drawable/round_palette_24"
                        app:iconGravity="textTop"
                        app:iconPadding="8dp"
                        app:iconSize="28dp"
                        app:tooltipText="@string/saturation" />
                </GridLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/videoControlsDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/audioDelayBtn"
                        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/audio_delay"
                        android:foreground="@drawable/button_focus_ring_selector"
                        android:text="@string/audio_delay"
                        android:textAlignment="center"
                        app:icon="@drawable/round_audiotrack_24"
                        app:tooltipText="@string/audio_delay" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/subDelayBtn"
                        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/sub_delay"
                        android:foreground="@drawable/button_focus_ring_selector"
                        android:text="@string/sub_delay"
                        android:textAlignment="center"
                        app:icon="@drawable/round_subtitles_24"
                        app:tooltipText="@string/sub_delay" />
                </LinearLayout>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Subtitle Navigation Section -->
        <com.google.android.material.card.MaterialCardView
            style="?attr/materialCardViewFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/rowSubSeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sub_seek_button"
                    android:textAppearance="?attr/textAppearanceTitleMedium" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/subSeekPrev"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/dialog_prev"
                    android:foreground="@drawable/button_focus_ring_selector"
                    app:icon="@drawable/round_skip_previous_24"
                    app:tooltipText="@string/dialog_prev" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/subSeekNext"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/dialog_next"
                    app:icon="@drawable/round_skip_next_24"
                    app:tooltipText="@string/dialog_next" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Stats Section -->
        <com.google.android.material.card.MaterialCardView
            style="?attr/materialCardViewFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:text="@string/toggle_stats"
                    android:textAppearance="?attr/textAppearanceTitleMedium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/statsBtnToggle"
                        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/toggle_stats"
                        android:foreground="@drawable/button_focus_ring_selector"
                        android:textAlignment="center"
                        app:icon="@drawable/round_remove_red_eye_24"
                        app:tooltipText="@string/toggle_stats" />


                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/statsToggleGroup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:selectionRequired="true"
                        app:singleSelection="true">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/statsBtn1"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:foreground="@drawable/button_focus_ring_selector"
                            android:text="1"
                            android:textAlignment="center"
                            tools:ignore="HardcodedText" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/statsBtn2"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:foreground="@drawable/button_focus_ring_selector"
                            android:text="2"
                            android:textAlignment="center"
                            tools:ignore="HardcodedText" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/statsBtn3"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:foreground="@drawable/button_focus_ring_selector"
                            android:text="3"
                            android:textAlignment="center"
                            tools:ignore="HardcodedText" />


                    </com.google.android.material.button.MaterialButtonToggleGroup>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>